{
    "name": "Secure WhatsApp",
    "version": "1.0",
    "manifest_version": 3,
    "description": "This extension hides the recent chat section on web.whatsapp.com and shows it on hover.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],

    "icons": {
        "16": "res/icon16.png",
        "128": "res/icon128.png"
    }
  }
  