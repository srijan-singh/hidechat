{
    "name": "HideChat",
    "version": "1.2",
    "manifest_version": 3,
    "description": "This extension hides the recent chat section on web.whatsapp.com and shows it on hover.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    
    "locales": [
      {
      "language": "ko-KR",
      "name": "Korean",
      "description": "이 확장 프로그램은 WhatsApp의 최근 채팅 섹션을 숨기고 마우스를 가져갈 때 표시합니다.",
      "path": "res/locales/ko-KR.json"
      }
      ],

    "icons": {
        "16": "res/icon_16.png",
        "32": "res/icon_32.png",
        "128": "res/icon_180.png",
        "192": "res/icon_192.png",
        "512": "res/icon_512.png"
    }
  }
  